<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Fullscreen Image -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/bottom_nav">
    <ImageView
        android:id="@+id/storyImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/black_rounded_container"
        android:padding="4dp"
        android:src="@drawable/story_other_main_img" />

    </RelativeLayout>

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:id="@+id/top__bar"
       >

        <!-- Progress bar row -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="#F9FDF9" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="#657156" />

            </LinearLayout>



            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="#657156" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="#657156" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="#657156" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="#657156" />
        </LinearLayout>

        <!-- Top row (profile, title/date, close) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/story_screen_song_profile"
                android:layout_marginEnd="8dp" />

            <!-- Title + Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/storyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highlight"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/storyDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="December 3, 2023"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Song Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/story_screen_soundwave"/>
                <TextView
                    android:id="@+id/storySong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text=" Artist Â· Song Title >"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Close Button -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/closeBtn"
                android:layout_gravity="center_vertical"
                android:src="@drawable/story_screen_close"
                android:background="@android:color/transparent" />
        </LinearLayout>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/heartOverlay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="bottom">

        <!-- Heart 1 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart_red"
            android:layout_alignParentBottom="true"
            android:alpha="0.2"
            android:layout_marginEnd="10dp"
            android:rotation="0.4"
            />

        <!-- Heart 2  -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_heart_red"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:alpha="1.0"
            android:layout_marginLeft="20dp"
            />

        <!-- Heart 3  -->
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_heart_red"
            android:layout_marginBottom="60dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:rotation="0"/>

        <!-- Heart 4  -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_red"
            android:layout_marginBottom="90dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.4"
            android:rotation="-10"/>

        <!-- Heart 5  -->
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_heart_red"
            android:layout_marginBottom="110dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.3"
            />

    </RelativeLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="12dp">

            <ImageView
                android:id="@+id/navActivity"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/story_screen_activity"
                android:contentDescription="Activity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Activity"
                android:textSize="12sp"/>
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Create -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/navCreate"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/story_screen_reels"
                    android:contentDescription="Create"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Create"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Create Post -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/navCreatePost"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/storu_screen_create_post"
                    android:contentDescription="Create Post"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Posts"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Browse -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/navBrowse"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/story_screen_browser"
                    android:contentDescription="Browse"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Browse"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- Send -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/navSend"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/story_screen_send"
                    android:contentDescription="Send"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Send"
                    android:textSize="12sp"/>
            </LinearLayout>

            <!-- More -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="8dp">

                <ImageView
                    android:id="@+id/navMore"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/story_screen_options"
                    android:contentDescription="More"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="More"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
