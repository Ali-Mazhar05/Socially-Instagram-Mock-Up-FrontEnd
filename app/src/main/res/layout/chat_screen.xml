<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dm_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:paddingEnd="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"

                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/internshala_profile"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvChatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="internshala"
                android:textSize="18sp"
                android:textStyle="bold"
                 />
        </LinearLayout>


        <ImageView
            android:id="@+id/btnVideo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/videocall_ic"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="0dp"/>

        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/info_ic" />
    </LinearLayout>

    <!-- Messages Area -->
    <ScrollView
        android:id="@+id/messageScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomInput"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Time Text -->
            <TextView
                android:id="@+id/sampleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/sampleMsg"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:text="4:49 PM"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Message Bubble -->
            <TextView
                android:id="@+id/sampleMsg"
                android:layout_width="107dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/hello_text"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="-2dp"/>
        </RelativeLayout>
    </ScrollView>

    <!-- Bottom Input Bar -->
    <LinearLayout
        android:id="@+id/bottomInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/home_indicator"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/gray_message_box"
        >

        <ImageView
            android:id="@+id/btnCamera"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/chat_camera_filled"
            android:layout_marginEnd="6dp"/>

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Message..."
            android:padding="8dp"
            android:background="#F1F1F1"
            android:inputType="text"/>

        <ImageView
            android:id="@+id/btnEmoji"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/chat_microphone"
            android:layout_marginStart="6dp"/>

        <ImageView
            android:id="@+id/btnGallery"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/chat_photos"
            android:layout_marginStart="6dp"/>

        <ImageView
            android:id="@+id/btnGifs"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/chat_gifs"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/home_indicator"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/search_homebar_line"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"

        android:background="@color/white" />
</RelativeLayout>
