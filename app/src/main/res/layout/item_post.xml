<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingBottom="8dp">

    <!-- Post Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/storyring"
                android:scaleType="fitXY" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_post_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/post_profile"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joshua_l"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_verified"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/main_feed_official_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokyo, Japan"
                android:textColor="#666"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_post_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more" />
    </LinearLayout>

    <!-- Post Image -->
    <FrameLayout
        android:id="@+id/postImageFrame"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/ivMainPostImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/main_post_img"
            android:contentDescription="Post Image"
            android:visibility="visible" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_double_tap_like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_heart_red"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Indicator + Actions (combined in one RelativeLayout) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="4dp">

        <!-- Left Actions -->
        <LinearLayout
            android:id="@+id/layout_actions_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/like" />

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/comment" />

            <ImageView
                android:id="@+id/iv_send"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/messanger" />
        </LinearLayout>

        <!-- Center Indicator -->
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/postIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="7dp"
            app:ci_drawable="@drawable/indicator_dot"
            app:ci_drawable_unselected="@drawable/indicator_dot_unselected"
            android:visibility="gone" />

        <!-- Right Bookmark -->
        <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/save" />
    </RelativeLayout>


    <!--Comments Section -->
    <LinearLayout
        android:id="@+id/comments_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp">
        <!-- Likes Row -->
        <LinearLayout
            android:id="@+id/layout_liked_by_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:cardCornerRadius="11dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_liked_by_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/craig_profile" />
            </androidx.cardview.widget.CardView>

            <TextView

                android:id="@+id/txt_liked_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Liked by "
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_liked_by_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="craig_love"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_liked_by_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" and "
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="44,686 others"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 comments"
            android:textColor="#888"
            android:textSize="13sp"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:id="@+id/comments_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

    <!--Add Comment Input Bar -->
    <LinearLayout
        android:id="@+id/comment_input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:visibility="gone"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/et_add_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add a comment..."
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_post_comment"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Post"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#007AFF"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp"/>

        <Button
            android:id="@+id/btn_cancel_comment"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Cancel"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:textColor="#FF4444"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginStart="2dp"/>
    </LinearLayout>


    <!--Likes + Caption -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp">


        <!-- Caption -->
        <TextView
            android:id="@+id/igpost_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enjoying the cherry blossoms. Tis is caption testing"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
